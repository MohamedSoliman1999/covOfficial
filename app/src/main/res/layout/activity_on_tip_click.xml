<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".OnTipClickActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ontip_backbtn"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:id="@+id/ontipclick_img"
        android:layout_marginStart="16dp"
        android:transitionName="imagetransition"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:id="@+id/ontipclick_txt"
            android:layout_marginTop="24dp"
            android:transitionName="texttransition"
            android:fontFamily="@font/segoebold"
            android:textColor="#020969"/>

        <TextView
            android:id="@+id/ontipclick_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:textColor="#020969"
            android:fontFamily="@font/segoe"/>
    </LinearLayout>
</ScrollView>