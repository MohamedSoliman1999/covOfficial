<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/we"
    android:layout_height="match_parent"
    tools:context=".TipsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/official_Tips_TV"
        android:fontFamily="@font/segoebold"
        android:textSize="22sp"
        android:textColor="#020969"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tips_TV"
                android:fontFamily="@font/segousemibold"
                android:textSize="21sp"
                android:textColor="#020969"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TV_what_should"
            android:fontFamily="@font/segoebold"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            android:textColor="#020969"/>

        <View
            android:layout_width="128dp"
            android:layout_height="3dp"
            android:background="#020969"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="42dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/corona"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                app:cardCornerRadius="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardone_design"
                    android:padding="8dp"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/virus"
                        android:id="@+id/coronaimg"
                        android:layout_margin="12dp"
                        android:transitionName="imagetransition"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/what_corona"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/coronatxt"
                        android:layout_marginStart="8dp"
                        android:transitionName="texttransition"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/symptoms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                app:cardCornerRadius="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardhospital_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cough"
                        android:id="@+id/syptomsimg"
                        android:transitionName="imagetransition"
                        android:layout_margin="12dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/what_symptom"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/syptomstxt"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="8dp"
                        android:transitionName="texttransition"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/transmitted"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                app:cardCornerRadius="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardnews_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/transmitted"
                        android:layout_margin="12dp"
                        android:id="@+id/transmittedimg"
                        android:transitionName="imagetransition"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_transmited"
                        android:fontFamily="@font/segousemibold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/transmittedtxt"
                        android:layout_marginBottom="16dp"
                        android:transitionName="texttransition"
                        android:layout_marginStart="8dp"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/prevent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardadvices_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/watertap"
                        android:id="@+id/preventimg"
                        android:transitionName="imagetransition"
                        android:layout_margin="12dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_prevent"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/preventtxt"
                        android:layout_marginStart="8dp"
                        android:transitionName="texttransition"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/mask"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardhospital_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facemask"
                        android:layout_margin="12dp"
                        android:id="@+id/maskimg"
                        android:transitionName="imagetransition"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/when_mask"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/masktxt"
                        android:layout_marginStart="8dp"
                        android:transitionName="texttransition"
                        android:layout_marginBottom="16dp"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/vaccine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardone_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/syringe"
                        android:id="@+id/vaccineimg"
                        android:transitionName="imagetransition"
                        android:layout_margin="12dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_there_vaci"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/vaccinetxt"
                        android:transitionName="texttransition"
                        android:layout_marginBottom="16dp"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/diagonsis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardadvices_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/diagnosis"
                        android:id="@+id/diagonsisimg"
                        android:transitionName="imagetransition"
                        android:layout_margin="12dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_diagnose"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:id="@+id/diagonsistxt"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:transitionName="texttransition"
                        android:layout_marginStart="8dp"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/plane"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/cardnews_design"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plane"
                        android:id="@+id/planeimg"
                        android:transitionName="imagetransition"
                        android:layout_margin="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_travels"
                        android:fontFamily="@font/segoebold"
                        android:textSize="19sp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/planetxt"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="8dp"
                        android:transitionName="texttransition"
                        android:textColor="#020969"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp">

        </LinearLayout>

    </LinearLayout>

</ScrollView>